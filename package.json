{
  "name": "@fireworks-js/monorepo",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "description": "A simple fireworks library!",
  "homepage": "https://fireworks.js.org",
  "scripts": {
    "dev:website": "turbo run dev --filter='./website'",
    "dev:examples": "turbo run dev --filter='./examples/*'",
    "build:website": "turbo run build --filter='./website'",
    "build:packages": "turbo run build --filter='./packages/*'",
    "build:examples": "turbo run build --filter='./examples/*'",
    "publish:packages": "pnpm --filter='./packages/*' -r publish",
    "clean": "del-cli ./**/node_modules ./**/dist ./**/.turbo",
    "test": "ava",
    "test:watch": "ava --watch",
    "format": "prettier --check --ignore-unknown '**/*.{ts,tsx,js,jsx,vue}'",
    "format:fix": "prettier --write --ignore-unknown '**/*.{ts,tsx,js,jsx,vue}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crashmax-dev/fireworks-js.git"
  },
  "keywords": [
    "lit",
    "react",
    "vue",
    "angular",
    "svelte",
    "canvas",
    "fireworks",
    "animation"
  ],
  "author": {
    "name": "Vitalij Ryndin",
    "email": "sys@crashmax.ru",
    "url": "https://crashmax.ru"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/crashmax-dev/fireworks-js/issues"
  },
  "packageManager": "pnpm@7.5.0",
  "devDependencies": {
    "@crashmax/prettier-config": "^1.1.1",
    "@crashmax/tsconfig": "^1.0.1",
    "@preact/preset-vite": "^2.3.0",
    "@sveltejs/kit": "1.0.0-next.360",
    "@sveltejs/vite-plugin-svelte": "1.0.0-next.49",
    "@tsconfig/svelte": "^3.0.0",
    "@types/node": "^18.0.3",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "@vitejs/plugin-react": "^1.3.2",
    "@vitejs/plugin-vue": "^2.3.3",
    "ava": "^4.3.0",
    "del-cli": "^4.0.1",
    "preact": "^10.5.15",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "solid-js": "^1.4.7",
    "svelte": "^3.44.0",
    "svelte-check": "^2.7.1",
    "svelte-preprocess": "^4.10.6",
    "svelte2tsx": "^0.5.11",
    "tslib": "^2.3.1",
    "tsx": "^3.7.1",
    "turbo": "^1.3.1",
    "typescript": "^4.7.4",
    "vite": "^2.9.14",
    "vite-plugin-banner": "^0.3.0",
    "vite-plugin-dts": "^1.2.1",
    "vite-plugin-solid": "^2.2.6",
    "vite-tsconfig-paths": "^3.5.0",
    "vue": "3.2.26",
    "vue-tsc": "0.33.9"
  }
}
