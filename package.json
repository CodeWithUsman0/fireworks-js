{
  "name": "@fireworks-js/monorepo",
  "version": "2.0.0",
  "type": "module",
  "private": true,
  "description": "A simple fireworks library!",
  "homepage": "https://fireworks.js.org",
  "scripts": {
    "dev:website": "pnpm -r --filter=./website/* run dev",
    "build:website": "pnpm -r --filter=./website/* run build",
    "dev:packages": "pnpm -r --filter=./packages/* run dev",
    "build:packages": "pnpm -r --filter=./packages/* run build",
    "test": "ava",
    "test:watch": "ava --watch",
    "format": "prettier --check --ignore-unknown '**/*.{ts,tsx,js,jsx,vue}'",
    "format:fix": "prettier --write --ignore-unknown '**/*.{ts,tsx,js,jsx,vue}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crashmax-dev/fireworks-js.git"
  },
  "keywords": [
    "canvas",
    "fireworks",
    "animation"
  ],
  "author": {
    "name": "Vitalij Ryndin",
    "email": "sys@crashmax.ru",
    "url": "https://crashmax.ru"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/crashmax-dev/fireworks-js/issues"
  },
  "packageManager": "pnpm@7.5.0",
  "devDependencies": {
    "@crashmax/prettier-config": "^1.1.1",
    "@crashmax/tsconfig": "^1.0.1",
    "@types/node": "^18.0.0",
    "ava": "^4.3.0",
    "tsx": "^3.7.1",
    "typescript": "^4.7.4",
    "vite": "^2.9.13",
    "vite-plugin-dts": "^1.2.1",
    "vite-tsconfig-paths": "^3.5.0"
  }
}
